generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model GitHubProfile {
  id String @id @default(cuid())

  login      String  @unique
  name       String?
  avatar_url String
  bio        String?

  followers    Int @default(0)
  following    Int @default(0)
  public_repos Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
